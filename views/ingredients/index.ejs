<%- include('../partials/header') %>
<script defer src="/javascripts/ingredients.js"></script>
<div class="d-flex flex-column align-items-center justify-content-around flex-wrap m-auto">
    <form >
        <div class="input-group input-group-sm mb-3">
            <div class="col input-group-text">
                <input type="text" name="name" id="ingredient-name" placeholder="Name"/>
            </div>
            <div class="col input-group-text">
                <input type="text" name="category" id="ingredient-category" placeholder="Category"/>
            </div>
            <div class="col input-group append">
                <button class ="btn btn-outline-secondary btn-sm"id="new-ingredient">Add Ingredient</button>
            </div>
        </div>
    </form>
    
    <table class="table table-striped table-sm table-width">
        <tbody id='ingredients-table'>
            <% ingredients.forEach(function(i){ %>
                <tr>
                    <td><%=i.name%></td>
                    <td><%=i.category%></td>
                </tr>
            <%})%>
        </tbody>
    </table>

    
</div>
   
<%- include('../partials/footer') %>
